<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:paddingTop="8dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_span="2"
                    android:padding="15dip"
                    android:text="@string/sales"
                    android:textAlignment="gravity"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/b"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/TextView4"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/b" />

                <EditText
                    android:id="@+id/sesdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/datestyle"
                    android:ems="10"
                    android:inputType="date" >

                    <requestFocus />
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/qty_sales"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/qty"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/b" />

                <EditText
                    android:id="@+id/SalesQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bordertext"
                    android:ems="10"
                    android:inputType="text" >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/TextView6"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Income"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/b" />

                <EditText
                    android:id="@+id/SalesIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bordertext"
                    android:ems="10"
                    android:inputType="text" >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/saTextView6"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Expences"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/b" />

                <EditText
                    android:id="@+id/SalesExpenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bordertext"
                    android:ems="10"
                    android:inputType="text" >
                </EditText>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp" >
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:weightSum="2" >

                <Button
                    android:id="@+id/SaveSales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="#63C964"
                    android:text="@string/save"
                    android:textColor="@color/w" />

                <Button
                    android:id="@+id/DeleteSales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#63C964"
                    android:text="Delete"
                    android:textColor="@color/w" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>