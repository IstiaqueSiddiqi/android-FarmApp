<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/landnameLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/landlistitem"
        android:layout_alignBottom="@+id/landlistitem"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        android:text="@string/landnm"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/b" />

    <TextView
        android:id="@+id/landlistitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/landnameLbl"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:gravity="left"
        android:singleLine="true"
        android:text="@string/desc"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/c" />

    <TextView
        android:id="@+id/LocLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/landnameLbl"
        android:layout_below="@+id/landnameLbl"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:text="@string/loc"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/b" />

    <TextView
        android:id="@+id/landLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LocLbl"
        android:layout_alignBottom="@+id/LocLbl"
        android:layout_alignLeft="@+id/landlistitem"
        android:gravity="left"
        android:text="@string/loc"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/b" />

    <TextView
        android:id="@+id/AreaLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LocLbl"
        android:layout_marginTop="32dp"
        android:gravity="right"
        android:text="@string/Area"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/b" />

    <TextView
        android:id="@+id/landArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/AreaLbl"
        android:layout_alignBottom="@+id/AreaLbl"
        android:layout_alignLeft="@+id/landLocation"
        android:gravity="left"
        android:text="@string/Area"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/b" />

</RelativeLayout>