<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_span="2"
                android:padding="15dip"
                android:text="@string/others"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/b"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/TextView2"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/category"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/b" />

            <Spinner
                android:id="@+id/SpinnereditOthers"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/TextView3"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/other"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/b" />

            <EditText
                android:id="@+id/Other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertext"
                android:ems="10"
                android:inputType="text" >
            </EditText>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/TextView4"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/b" />

            <EditText
                android:id="@+id/OtherDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/datestyle"
                android:ems="10"
                android:inputType="text" >
            </EditText>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/TextView6"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/amt"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/b" />

            <EditText
                android:id="@+id/OtherExpenses"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertext"
                android:ems="10"
                android:inputType="text" >
            </EditText>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:weightSum="2" >

            <Button
                android:id="@+id/oeSaveOthers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#63C964"
                android:text="@string/save"
                android:textColor="@color/w" />

            <Button
                android:id="@+id/oeDeleteOthers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#63C964"
                android:text="Delete"
                android:textColor="@color/w" />
        </TableRow>
    </TableLayout>

</ScrollView>